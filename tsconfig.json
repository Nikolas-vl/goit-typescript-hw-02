{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",  // або "NodeNext", але з node буде простіше
    "jsx": "react-jsx",
    "types": ["vite/client", "react", "react-dom", "react/jsx-runtime"],
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "src/types"]
}
